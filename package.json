{
  "name": "playwright-framework",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "@playwright/test": "^1.50.1",
  "playwright": "^1.50.1",
  "scripts": {
    "test": "npx playwright test",
    "test:clean-logs": "node scripts/clean-logs.js",
    "test:headed": "npx playwright test --headed",
    "report": "npx allure generate ./allure-results --clean && npx allure open",
    "test:allure": "ALLURE_NO_ANALYTICS=1 playwright test --reporter=allure-playwright",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:clear": "rm -rf allure-results allure-report",
    "posttest": "sh scripts/upscale-videos.sh",
    "test:api:folder": "node scripts/parallel-env-runner.js --env dev --location api",
    "test:specs": "node scripts/parallel-env-runner.js --env dev --location specs",
    "test:performance": "node scripts/parallel-env-runner.js --env dev --location performance",
    "test:api:tag": "node scripts/parallel-env-runner.js --env dev --tags @apiTests --parallel false",
    "test:smoke:dev:parallel": "node scripts/parallel-env-runner.js --env dev --tags @smokeTests",
    "test:smoke:uat:parallel": "node scripts/parallel-env-runner.js --env uat --tags @smokeTests",
    "test:all:parallel": "node scripts/parallel-env-runner.js --env dev",
    "test:all": "node scripts/parallel-env-runner.js --env dev --parallel false",
    "test:chrome": "node scripts/parallel-env-runner.js --env dev --project chrome",
    "test:firefox": "node scripts/parallel-env-runner.js --env dev --project firefox",
    "test:edge": "node scripts/parallel-env-runner.js --env dev --project edge",
    "test:dev": "node scripts/parallel-env-runner.js --env dev",
    "test:uat": "node scripts/parallel-env-runner.js --env uat"
  },
  "keywords": [],
  "author": "Hoang Pham",
  "license": "ISC",
  "devDependencies": {
    "@cucumber/cucumber": "^11.2.0",
    "@cucumber/pretty-formatter": "^1.0.1",
    "@faker-js/faker": "^9.6.0",
    "@playwright/test": "^1.51.1",
    "@types/node": "^22.13.5",
    "@wdio/allure-reporter": "^9.12.3",
    "allure-commandline": "^2.33.0",
    "allure-playwright": "^3.2.0",
    "chalk": "^5.4.1",
    "chart.js": "^4.4.8",
    "chartjs-node-canvas": "^5.0.0",
    "cross-env": "^7.0.3",
    "cucumber-html-reporter": "^7.2.0",
    "dotenv": "^16.4.7",
    "eslint": "^8.0.0",
    "eslint-plugin-playwright": "^0.12.0",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.1",
    "lighthouse": "^12.4.0",
    "prettier": "^2.8.0",
    "winston": "^3.17.0",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "canvas": "^3.1.0",
    "chrome-launcher": "^1.1.2",
    "faker": "^5.5.3",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "playwright": "^1.51.1",
    "uuid": "^11.1.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
